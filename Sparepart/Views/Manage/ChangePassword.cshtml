<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>

<section class="content container-fluid">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Password Lama", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })*@
                @Html.Kendo().TextBoxFor(m => m.OldPassword).HtmlAttributes(new { style = "width: 100%;", @class = "form-control", placeholder = "Password Lama", required = "required", validationmessage = "Input Password Lama" , @type = "password" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Password Baru", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })*@
                @Html.Kendo().TextBoxFor(m => m.NewPassword).HtmlAttributes(new { style = "width: 100%;", @class = "form-control", placeholder = "Password", required = "required", validationmessage = "Input Password Baru", @type = "password" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Konfirmasi Password", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })*@
                @Html.Kendo().TextBoxFor(m => m.ConfirmPassword).HtmlAttributes(new { style = "width: 100%;", @class = "form-control", placeholder = "Konfirmasi Password", required = "required", validationmessage = "Input Password Baru", @type = "password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="k-button k-primary" type="submit" value="Ubah Password"/>
            </div>
        </div>
    }
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}